{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "globals": {
        "expect": "readonly",
        "test": "readonly",
        "Exception": "readonly"
    },
    "extends": [
        "eslint:recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/no-var-requires": 0,
        "no-inner-declarations": 0,
        "indent": ["error", 4],
        "no-useless-escape": 0,
        "no-unused-vars": 0
    }
}
